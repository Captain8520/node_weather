<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>Document</title>
</head>




<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 text-center">
                <h2 class alert-secondary p-3>Forcast weather</h2>
            </div>
        </div>
        <div class="row mt-2">
            <hr />
        </div>    
        <div class="row text-center">
            <div class="col-md-3 d-sm-none d-md-block"></div>
            <div class="col-sm-6 col-md-3 mx-md-auto">
                <div type="button" class="btn btn-lg btn-success p-4 mt-1 mb-1" onclick="city_form()">
                    province or district
                
                
                
                
                </div>
            </div>
            <div class="col-sm-6 col-md-3 mx-md-auto">
                <div type="button" class="btn btn-lg btn-primary p-4 mt-1 mb-1" onclick="location_form()">
                    longitude or latitude
                
                
                
                
                </div>     
            </div>
            <div class="col-md-3 d-sm-none d-md-block"></div>    
        </div>
        <div class="row mt-2">
            <hr />
        </div>
        <div class="row" id="city" style="display:none;">
            <div class="col-sm-6 mx-auto">
                <form action="/api/city" id="form_city" class="form text-center">
                    <div class="form-group">
                        <label for="city">province or district in Thailand</label>
                        <select name="city" class="form-control ml-2" id="city">
                        <option value="">choose</option>
                        <% lists.forEach(function(list) { %>
                        <option value="<%= list.name %>"><%=list.name %></option>
                        <% }) %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Forcast</button>
                </form>
            </div>
        </div>   
        <div class="row" id="location" style="display:none;" >
            <div class="col-sm-6 mx-auto">
                <form action="/api/coordinate" id="form_location" class="text-center">
                    <div class="form-group">
                        <label for="lon">Longitude</label>
                        <input name="lon" type="number" step="0.0001" class="form-control" id="lon" placeholder="0.0000">
                    </div>
                    <div class="form-group">
                        <label for="lat">Latitude</label>
                        <input name="lat" type="number" step="0.0001" class="form-control" id="lat" placeholder="0.0000">
                    </div>
                    <button type="submit" class="btn btn-primary">Forcast</button>
                </form>
            </div>
        </div> 
    </div>
    <script>
        function city_form(){
            document.getElementById("city").style.display ="block";
            document.getElementById("location").style.display ="none";
        }
        function location_form(){
            document.getElementById("city").style.display ="none";
            document.getElementById("location").style.display ="block";
        }
    </script>
</body>
</html>

